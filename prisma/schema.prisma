// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Team {
  UP
  DOWN
}

model User {
  id              String  @id @unique
  team            Team
  usedGrace       Boolean @default(false)
  countsThisMonth Int     @default(0)
  countsTotal     Int     @default(0)
}

model Game {
  id              Int     @id @default(autoincrement())
  number          Int
  lastCounter     String?
  upTeamMembers   Int     @default(0)
  downTeamMembers Int     @default(0)
  upTeamWins      Int     @default(0)
  downTeamWins    Int     @default(0)
}

model Banlist {
  id              Int     @id @default(autoincrement())
  userId          String
  bannedUntil     Int?
  moderatorId     String?
  banReason       String @default("No reason provided")
}